---
import Layout from '../layouts/Layout.astro';
import Icono from '../assets/icon/bar.png';
import Inicio from '../components/inicio.astro';
import Sobremi from '../components/sobremi.astro';
import Experiencia from '../components/experiencia.astro';
import Proyectos from '../components/proyectos.astro';
import Introduccion from '../components/introduccion.astro';
import Contacto from '../components/contacto.astro';
---

<Layout>
	<nav class="nav_inicio">
		<div class="nav_inicio-logo">
			<img src={Icono.src} alt="">
			<span>PORTAFOLIO 2025</span>
		</div>
		<div class="nav_inicio-links">
			<a href="">INICIO</a>
			<a href="">SOBRE MI</a>
			<a href="">PROYECTOS</a>
			<a href="">EXPERIENCIA</a>
			<a href="">CONTACTO</a>
		</div>
	</nav>
	<main>
		<Inicio/>
		<Introduccion/>
		<Sobremi/>
		<Proyectos/>
		<Experiencia/>
		<Contacto/>
	</main>
	<footer class="footer_final">
		<span>
			Â©2025. MIGUEL JESUS
		</span>
		<span>
			PROGRAMADOR FULL STACK
		</span>
	</footer>
</Layout>

<style>
	.nav_inicio {
		display: flex;
		justify-content: space-between;
		align-items: center;
		position: fixed;
		width: 100%;
		padding: 25px 30px;
		background-color: #f5f5f5;
		box-sizing: border-box;
		z-index: 99;
	}

	.nav_inicio-logo {
		display: flex;
		align-items: center;
		gap: 5px;
	}

	.nav_inicio-logo img {
		height: 20px;
		width: 24px;
	}

	.nav_inicio-logo span {
		font-size: 15px;
		font-weight: 600;
	}

	.nav_inicio-links {
		display: flex;
		gap: 20px;
	}

	.nav_inicio-links a {
		font-size: 15px;
		font-weight: 600;
		text-decoration: none;
		color: #000000;
		transition: 0.2s;
	}

	.nav_inicio-links a:hover {
		color: #a0a0a0;
	}

	main {
		margin-top: 70px;
	}

	.footer_final {
		display: flex;
    	flex-direction: column;
		align-items: center;
		padding: 30px;
		text-align: center;
		gap: 5px;
	}

	.footer_final span {
		font-size: 12px;
    	font-weight: 600;
		color: #919191;
	}
</style>